.container { padding: 40rpx; display:flex; flex-direction:column; align-items:center; min-height:100vh; }
.card { background-color:#fff; border-radius:24rpx; box-shadow:0 8rpx 20rpx rgba(0,0,0,0.05); padding:60rpx; text-align:center; margin-top:80rpx; }
.title { font-size:36rpx; font-weight:600; color:#333; margin-bottom:40rpx; }
.qrcode { width:400rpx; height:400rpx; margin-bottom:40rpx; }
.name { font-size:40rpx; font-weight:bold; color:#007aff; }
.company { font-size:30rpx; color:#555; margin-top:10rpx; }
.btn-group { display:flex; justify-content:space-around; margin-top:80rpx; width:100%; }
