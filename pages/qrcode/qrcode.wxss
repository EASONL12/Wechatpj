.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 0;
  box-sizing: border-box;
}

/* 卡片居中 */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 90%;
  max-width: 700rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}

/* ✅ 确保二维码水平垂直居中 */
.qrcode-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.qrcode {
  width: 400rpx;   /* 固定二维码大小 */
  height: 400rpx;
  background: #fff;
}

.info {
  text-align: center;
  margin-top: 40rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
}

.company {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.btn-group {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.btn {
  background-color: #007aff;
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}
