.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

input {
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 20rpx;
}

.generate-btn {
  margin-top: 40rpx;
  width: 80%;
  background-color: #007aff;
  color: white;
  border-radius: 30rpx;
}
