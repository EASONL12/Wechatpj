.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.title {
  font-size: 34rpx;
  margin-bottom: 40rpx;
}

.preview {
  width: 80%;
  margin: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 0 8rpx #ccc;
}

.loading {
  margin-top: 30rpx;
  color: #888;
}

/* 新增按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx; /* 按钮间距 */
  margin-top: 20rpx;
}

.button-group button {
  width: 200rpx;
}
